<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="AppThemeSplash" parent="@style/AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="titleTextColor">@color/grey_xlight</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:colorBackground">@color/primaryDarkColor</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ListPrimaryText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grey_medium</item>
        <item name="android:textSize">@dimen/label_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListValueText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grey_medium</item>
        <item name="android:textSize">@dimen/label_medium</item>
    </style>

    <style name="ListSecondaryText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grey_light</item>
        <item name="android:textSize">@dimen/label_small</item>
    </style>

    <style name="ContentText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grey_medium</item>
        <item name="android:textSize">@dimen/label_medium</item>
    </style>

    <style name="MetaText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textSize">@dimen/label_small</item>
    </style>

    <style name="TitleText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grey_xlight</item>
        <item name="android:textSize">@dimen/label_large</item>
    </style>

    <style name="TextAppearance.Design.CollapsingToolbar.Expanded.Shadow">
        <item name="android:shadowDy">0</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowRadius">16</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>

</resources>
